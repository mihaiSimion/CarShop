{% extends 'base.html.twig' %}

{% block body %}
    <div class="container align_text hr_space">
    <form class="form-signin" action="{{ path('login') }}" method="POST">
        <label for="_username" class="sr-only">Username</label>
        <input type="text"
               id="_username"
               name="_username"
               class="form-control"
               placeholder="Username"
               required autofocus>
        <label for="_password" class="sr-only">Password</label>
        <input type="password"
               id="_password"
               name="_password"
               class="form-control"
               placeholder="Password"
               required>

        <button class="btn-primary btn-lg"  style="margin-top: 25px;" type="submit">Sign in</button>
    </form>
    </div>
{% endblock %}